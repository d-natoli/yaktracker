%html
  %head
    %title YakTracker
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application" 
    = csrf_meta_tags
%body
  #header
    #where
      = link_to image_tag("wherearetheynow.png"), map_index_path
    #logo
      = link_to image_tag("yaktrackerlogo.png"), root_path
    #message
      = link_to image_tag("sendamessage.png"), new_message_path

  #content
    #flash
      - if flash[:notice]
        %p.notice= flash[:notice]
      - elsif flash[:error]
        %p.error= flash[:error]

    = yield
    = yield :scripts

  #footer
    %p
      Any issues? Contact me at 
